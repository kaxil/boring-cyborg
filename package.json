{
  "name": "boring-cyborg",
  "version": "1.0.0",
  "private": true,
  "description": "ðŸ¤– A Github bot to automatically label PRs, issues and perform the boring operations",
  "author": "Kaxil Naik",
  "license": "ISC",
  "repository": "https://github.com/kaxil/boring-cyborg.git",
  "homepage": "https://github.com/kaxil/boring-cyborg",
  "bugs": "https://github.com/kaxil/boring-cyborg/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "request_labeled": "node_modules/.bin/probot receive -e pull_request -p test/pr.labeled.json index.js",
    "request_unlabeled": "node_modules/.bin/probot receive -e pull_request -p test/pr.unlabeled.json ./index.js"
  },
  "dependencies": {
    "probot": "^12.3.3",
    "ignore": "^5.1.4"
  },
  "devDependencies": {
    "jest": "^29.1.2",
    "nock": "^11.4.0",
    "nodemon": "^2.0.20",
    "smee-client": "^1.2.3",
    "standard": "^14.3.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
